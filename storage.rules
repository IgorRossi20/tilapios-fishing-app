rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Permitir upload e leitura de imagens de capturas para usuários autenticados
    match /catches/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Permitir leitura pública de imagens (para exibição no feed)
    match /catches/{userId}/{allPaths=**} {
      allow read: if request.auth != null;
    }
    
    // Regra geral para outros arquivos (mais restritiva)
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}